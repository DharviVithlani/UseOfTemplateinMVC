<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Dashboard 3</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link href="~/CSS/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="/CSS/adminlte.min.css" rel="stylesheet" />
    <link href="~/CSS/default.css" rel="stylesheet" />
    <link href="~/CSS/toastr.min.css" rel="stylesheet" />
    <link href="~/CSS/sweetalert2.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li>
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
            </ul>

            <ul class="navbar-nav ml-auto row">
                <li class="nav-item col-md-8">
                    <div class="custom-control custom-switch custom-switch-off-white custom-switch-on-dark pt-2">
                        @Html.CheckBox("DarkMode", false, new { @class = "custom-control-input", @onclick = "DarkModeOnOff()" })
                        <label class="custom-control-label" for="DarkMode">DarkMode</label>
                    </div>
                </li>
                <li class="nav-item dropdown col-md-4">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <div class="image">
                            <img src="@Session["image"]" id="userprofilepicture" class="img-circle elevation-2 cursor-pointer" height="25" width="25">
                        </div>
                    </a>

                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <div class="dropdown-divider"></div>
                        <div href="#" class="dropdown-item">
                            <i class="fas fa-user-edit mr-2"></i>
                            <span>
                                @Html.ActionLink("My Profile", "Registration", "Registration", new { id = Session["id"] }, new { @class = "text-reset text-decoration-none" })
                            </span>
                        </div>
                        <div class="dropdown-divider"></div>
                        <div href="#" class="dropdown-item">
                            <i class="fas fa-edit mr-2"></i>
                            <span>
                                @Html.ActionLink("Change Password", "ChangePassword", "ChangePassword", null, new { @class = "text-reset text-decoration-none" })
                            </span>
                        </div>
                        <div class="dropdown-divider"></div>
                        <div href="#" class="dropdown-item">
                            <i class="fas fa-sign-out-alt mr-2"></i>
                            <span>
                                @Html.ActionLink("Logout", "Logout", "LoginV2", null, new { @class = "text-reset text-decoration-none" })
                            </span>
                        </div>
                        <div class="dropdown-divider"></div>
                    </div>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <img src="~/Images/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">AdminLTE 3</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="@Session["image"]" id="userimage" class="img-circle elevation-2 cursor-pointer " alt="User Image" title="Upload Profile" data-toggle="modal" data-target="#modal-default">
                    </div>
                    <div class="info">
                        @Html.ActionLink("Welcome, " + Session["name"], "Registration", "Registration", new { id = Session["id"] }, null)
                    </div>
                </div>

                <nav class="mt-2" id="nav">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            @Html.ActionLink("About US", "About", "About", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Contact Us", "Contact", "Contact", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Members", "Members", "Members", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Member(JqDatatable)", "MemberV2", "MemberV2", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Product", "Index", "Product", null, new { @class = "nav-link" })
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <div class="overlay" style="display:none">
                <i class="fas fa-2x fa-sync-alt fa-spin"></i>
            </div>
            @RenderBody()
        </div>
        <footer class="main-footer">
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.1.0
            </div>
        </footer>
    </div>
    <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
            @Html.Partial("~/Views/Upload/_Upload.cshtml");
        </div>
    </div>
    <script src="~/Scripts/Layout/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/Layout/adminlte.min.js"></script>
    <script src="~/Scripts/loader.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/sweetalert2.min.js"></script>
    <script src="~/Scripts/Layout/layout.js"></script>
</body>
</html>
