@model BusinessLogic.Models.login
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link href="~/CSS/fontawesome-free/css/all.min.css" rel="stylesheet" /> 
<link href="~/CSS/adminlte.min.css" rel="stylesheet" />
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a><b>Admin</b>LTE</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Login</p>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="input-group">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Username" } })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fa fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</div>

                    <div class="row">
                        <div class="col-12">
                            <div class="text-center">
                                <input type="submit" value="Login" class="btn btn-primary btn-block" />
                            </div>
                        </div>
                    </div>
                }
                <span class="text-danger">
                    @ViewBag.invalidMessage
                </span>
                <p class="mb-1">
                    @Html.ActionLink("I forgot my password", "ForgotPassword", "ForgotPassword")
                </p>

                <p class="mb-0">
                    @Html.ActionLink("Register a new membership", "NewRegistration", "Registration")
                </p>

            </div>
        </div>
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

