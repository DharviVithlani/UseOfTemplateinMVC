@model IEnumerable<DataAccessLayer.uspGetAllMembers_Result>
@{
    ViewBag.Title = "Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/CSS/MemberPage/toastr.min.css" rel="stylesheet" />
<link href="~/CSS/MemberPage/bootstrap-4.min.css" rel="stylesheet" />
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Members</h3>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width: 90px">No.</th>
                <th style="width: 500px">FullName</th>
                <th>UserName</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1;}
            @foreach (var item in Model)
            {
                <tr id="row_@item.UserId">
                    <td>
                        <span>@i</span>
                        @{i++;
                        }
                    </td>
                    <td>@item.FullName</td>
                    <td>@item.UserName</td>
                    <td>
                        <div class="row">
                            <div class="col-md-6">
                                @Html.ActionLink("Edit", "Registration", "Registration", new { id = item.UserId }, new { @class = "btn btn-block btn-outline-primary" })
                            </div>

                            <div class="col-md-6">
                                @*@Html.ActionLink("Delete", "Delete", "Members", new { @class = "btn btn-block btn-outline-danger", data_toggle = "modal", data_target = "#modal-default" })*@
                                <a href="#" class="btn btn-block btn-outline-danger" onclick="ConfirmDelete(@item.UserId)">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmation Message</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this record?</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <a href="#" class="btn btn-primary" onclick="DeleteUser()">Delete</a>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hiddenuserid" />

<script type="text/javascript">
    var ConfirmDelete = function (userid) {
        $("#hiddenuserid").val(userid);
        debugger
        $("#modal-default").modal('show');
    }
    var DeleteUser = function () {
        var id = $("#hiddenuserid").val();
        debugger
        $.ajax({
            type: "POST",
            url: "/Members/Delete",
            data: { id: id },
            success: function (result) {
                $("#modal-default").modal("hide");
                $("#row_" + id).remove();
            }
        })
    }
</script>
<script src="~/Scripts/MemberPage/demo.js"></script>
<script src="~/Scripts/MemberPage/sweetalert2.min.js"></script>
<script src="~/Scripts/MemberPage/toastr.min.js"></script>
