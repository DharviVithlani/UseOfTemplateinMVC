@model IEnumerable<DataAccess.uspGetAllMembers_Result>
@{
    ViewBag.Title = "Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/CSS/MemberPage/toastr.min.css" rel="stylesheet" />
<link href="~/CSS/MemberPage/bootstrap-4.min.css" rel="stylesheet" />
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Members</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="breadcrumb-item active">Members</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<table class="table table-striped">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="input-group">
                @using (Html.BeginForm("Members", "Members", FormMethod.Get))
                {
                    @Html.TextBox("search", null, new { @class = "form-control form-control-lg", placeholder = "Type your keywords here" })
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-lg btn-default">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>&nbsp;&nbsp;&nbsp;
    <thead>
        <tr>
            <th style="width: 90px">No.</th>
            <th style="width: 600px">FullName</th>
            <th style="width: 700px">UserName</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count()==0)
        {
            <tr>
                <td colspan="5" class="text-center"> Records not found </td>
            </tr>
        }
        else
        {
            int i = 1;
            foreach (var item in Model)
            {
                <tr id="row_@item.UserId">
                    <td>
                        <span>@i</span>
                        @{i++;
                        }
                    </td>
                    <td>@item.FullName</td>
                    <td>@item.UserName</td>
                    <td>
                        <div class="row">
                            <div class="col-md-6">
                                @Html.ActionLink("Edit", "Registration", "Registration", new { id = item.UserId }, new { @class = "btn btn-block btn-outline-primary" })
                            </div>
                            <div class="col-md-6">
                                <a href="#" class="btn btn-block btn-outline-danger" onclick="ConfirmDelete(@item.UserId)">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmation Message</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this record?</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <a href="#" class="btn btn-primary" onclick="DeleteUser()">Delete</a>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hiddenuserid" />

<script type="text/javascript">
    var ConfirmDelete = function (userid) {
        $("#hiddenuserid").val(userid);
        debugger
        $("#modal-default").modal('show');
    }
    var DeleteUser = function () {
        var id = $("#hiddenuserid").val();
        debugger
        $.ajax({
            type: "POST",
            url: "/Members/Delete",
            data: { id: id },
            success: function (result) {
                $("#modal-default").modal("hide");
                $("#row_" + id).remove();
            }
        })
    }
</script>
<script src="~/Scripts/MemberPage/demo.js"></script>
<script src="~/Scripts/MemberPage/sweetalert2.min.js"></script>
<script src="~/Scripts/MemberPage/toastr.min.js"></script>
