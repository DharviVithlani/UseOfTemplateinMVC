@model IEnumerable<DataAccess.uspGetAllMembers_Result>
@{
    ViewBag.Title = "Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>Members</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="breadcrumb-item active">Members</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Members", "Members", FormMethod.Get))
                {
                    <div class="input-group">
                        @Html.TextBox("search", null, new { @class = "form-control form-control-lg", placeholder = "Type your keywords here", @id = "txtsearch" })
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-lg btn-default" name="command" value="Search">
                                <i class="fa fa-search"></i>
                            </button>
                            <button type="submit" class="btn btn-lg btn-default" name="command" value="Close">
                                <i class="fa fa-window-close"></i>
                            </button>
                        </div>
                    </div>
                }
                <br />
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 90px">No.</th>
                            <th style="width: 600px">@Html.ActionLink("FullName", "Members", new { search = ViewBag.Search,sortby = "FullName", sorttype = ViewBag.SortType, pSortOn = ViewBag.SortBy })</th>
                            <th style="width: 700px">@Html.ActionLink("UserName", "Members", new { search = ViewBag.Search,sortby = "UserName", sorttype = ViewBag.SortType ,pSortOn=ViewBag.SortBy})</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            int i = 1;
                            foreach (var item in Model)
                            {
                                <tr id="row_@item.UserId">
                                    <td>
                                        <span>@i</span>
                                        @{i++;
                                        }
                                    </td>
                                    <td>@item.FullName</td>
                                    <td>@item.UserName</td>
                                    <td>
                                        <div class="row">
                                            <div class="col-md-6">
                                                @Html.ActionLink("Edit", "Registration", "Registration", new { id = item.UserId }, new { @class = "btn btn-block btn-outline-primary" })
                                            </div>
                                            <div class="col-md-6">
                                                <a href="#" class="btn btn-block btn-outline-danger" onclick='ConfirmDelete(@item.UserId,"@item.UserName")'>Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center"> Records not found </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="modal fade" id="modal-default">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <input type="hidden" id="hiddenuserid" />
                                <h4 class="modal-title">Confirmation Message</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you wants to delete <label id="lblusername"></label>?
                            </div>
                            <div class="modal-footer">
                                <a href="#" class="btn btn-primary" onclick="DeleteUser()">Yes</a>
                                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    var ConfirmDelete = function (userid, username) {
        $("#hiddenuserid").val(userid);
        $("#lblusername").text(username);
        $("#modal-default").modal('show');
    }
    var DeleteUser = function () {
        var id = $("#hiddenuserid").val();
        var search = $("#txtsearch").val();
        $.ajax({
            type: "POST",
            url: "/Members/Delete",
            data: {
                id: id,
                search: search
            },
            success: function (result) {
                $("#modal-default").modal("hide");
                $("#row_" + id).remove();
                if (result == 0) {
                    markup = "<tr><td colspan='5' class='text-center'>Records not found</td></tr>";
                    tableBody = $("table tbody");
                    tableBody.append(markup);
                }
            }
        })
    }
</script>
