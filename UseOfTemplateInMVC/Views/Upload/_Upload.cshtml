<link href="~/CSS/sweetalert2.min.css" rel="stylesheet" />
@using (Ajax.BeginForm("Upload", "Upload", null, new AjaxOptions { OnSuccess = "OnSuccess", OnBegin = "OnBegin" }, new { enctype = "multipart/form-data" }))
{
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Profile Picture.</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="ProfileImage" name="file" onchange="uploadImage()">
                        <label for="ProfileImage" class="custom-file-label" id="lblImageName">Choose File</label>
                    </div>
                </div>
            </div>
            <p class="text-danger" id="message"></p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>
    </div>
}
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/sweetalert2.min.js"></script>
<script src="~/Scripts/Upload/bs-custom-file-input.min.js"></script>
<script src="~/Scripts/Upload/uploadImage.js"></script>